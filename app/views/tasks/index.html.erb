<div class="row">
  <div class="small-12 small-centered columns"><h1 id="page-title">Tasks!</h1></div>
</div>

<%= render "form", task: @task %>

<div class="row">
  <div id="group_container" class="small-12 columns">
    <% if !@tasks.empty? %>
      <% @tasks.each do |importance, task_group| %>
        <%= render "group", importance: importance, task_group: task_group %> 
      <% end %>
    <% end %>
  </div>
</div>
