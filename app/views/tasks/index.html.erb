<div class="row">
  <div class="small-12 small-centered columns"><h1 id="page-title">Tasks!</h1></div>
</div>

<%= render "form", task: @task %>

<div class="row">
  <div id="tasks" class="small-12 columns">
    <% if !@tasks.empty? %>
      <h4><%= pluralize(@tasks.count, "task") %></h4>
      <% @tasks.each do |task| %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>
</div>
