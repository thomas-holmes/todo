<%= content_tag_for :li, task do %>
  <%= form_for task, remote: true do|f| %>
    <span class="task"><%= task.description %></span>
    <%= link_to task, class: 'removal-link', data: {confirm: 'Are you sure?', method: 'delete'}, rel: "nofollow", remote: "true" do %>Remove<% end %>
  <% end %>
<% end %>
